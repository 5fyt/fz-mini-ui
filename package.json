{
  "private": true,
  "workspaces": [
    "packages/*",
    "play",
    "docs"
  ],
  "scripts": {
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "dev": "pnpm run -C play dev",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx,.md,.json --max-warnings 0 --cache",
    "lint:fix": "pnpm run lint --fix",
    "clean": "pnpm run clean:dist && pnpm run -r --parallel clean",
    "clean:dist": "rimraf dist",
    "build": "pnpm run -C internal/build start",
    "build:theme": "pnpm run -C packages/theme-chalk build",
    "runall": "pnpm run typecheck:web && pnpm run typecheck:play",
    "typecheck": "run-p typecheck:web typecheck:play typecheck:node",
    "typecheck:node": "tsc -p tsconfig.node.json --noEmit",
    "typecheck:web": "vue-tsc -p tsconfig.web.json --composite false --noEmit",
    "typecheck:play": "vue-tsc -p tsconfig.play.json --composite false --noEmit",
    "typecheck:vitest": "vue-tsc -p tsconfig.vitest.json --composite false --noEmit",
    "prepare": "husky"
  },
  "dependencies": {
    "@fz-mini/components": "workspace:*",
    "@fz-mini/constants": "workspace:*",
    "@fz-mini/hooks": "workspace:*",
    "@fz-mini/theme-chalk": "workspace:*",
    "@fz-mini/utils": "workspace:*",
    "@types/lodash": "^4.17.7",
    "@types/lodash-es": "^4.17.12",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@esbuild-kit/cjs-loader": "^2.4.4",
    "@fz-mini/build": "workspace:^",
    "@fz-mini/build-utils": "workspace:*",
    "@fz-mini/eslint-config": "workspace:*",
    "@types/fs-extra": "^11.0.4",
    "@types/gulp": "^4.0.17",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.1.0",
    "@vicons/ionicons5": "^0.12.0",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vitest/ui": "^2.1.1",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^8.23.1",
    "eslint-define-config": "^2.1.0",
    "happy-dom": "^15.7.4",
    "husky": "^8.0.0",
    "jsdom": "^25.0.0",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3",
    "sass": "^1.79.1",
    "ts-morph": "^23.0.0",
    "tsx": "^4.19.1",
    "typescript": "^5.5.4",
    "unplugin-vue-macros": "^2.12.2",
    "vitest": "^2.1.1",
    "vue": "^3.4.31"
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": "eslint --fix"
  }
}
